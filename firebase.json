{
  "hosting": {
    "public": "dist",
    "headers": [
      {
        "source": "/logo.png",
        "headers": [ { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" } ]
      }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
